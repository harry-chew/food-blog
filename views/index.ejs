<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <h1>Food Blog</h1>
    <%- include('partials/header.ejs') %>
    
    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %> 
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% }); %>
        <% } else { %>
            <p>No blogs to display</p>
        <% } %>
    </div>

    <%- include('partials/footer.ejs') %>
</body>
</html>